# ======================
# Database (Supabase)
# ======================
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# ======================
# Security
# ======================
# API secret for HMAC signing (generate: openssl rand -base64 32)
API_SECRET="your-api-secret-here"

# JWT secret for token signing (generate: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"

# Cron secret for protected cron endpoints
CRON_SECRET="your-cron-secret-here"

# ======================
# Payment - Midtrans
# ======================
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_IS_PRODUCTION="false"

# ======================
# Payment - Xendit (Backup)
# ======================
XENDIT_SECRET_KEY="your-xendit-secret-key"
XENDIT_IS_PRODUCTION="false"

# ======================
# Email (Resend - FREE 100/day)
# ======================
RESEND_API_KEY="your-resend-api-key"

# ======================
# Alerts (Optional)
# ======================
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/xxx"
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_ADMIN_CHAT_ID="your-chat-id"
ADMIN_EMAIL="admin@slothunter.app"

# ======================
# App URLs
# ======================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
